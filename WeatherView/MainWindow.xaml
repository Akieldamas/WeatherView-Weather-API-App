<Window x:Class="WeatherView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherView"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Assets\Background.jpg"></ImageBrush>
            </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="ComboBox_Cities" Grid.Row="0" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <Label x:Name="Label_Time" Grid.Row="0" Content="02:30" HorizontalAlignment="Left" Margin="287,0,0,0" VerticalAlignment="Top" Width="103" Height="26"/>
        <Label x:Name="Label_Date" Grid.Row="0" Content="14 DEC 2019" HorizontalAlignment="Left" Margin="287,20,0,0" VerticalAlignment="Top" Width="103" Height="26"/>
        <Label x:Name="Label_Day" Grid.Row="0" Content="Saturday" HorizontalAlignment="Left" Margin="287,40,0,0" VerticalAlignment="Top" Width="103" Height="26"/>
         
           
    </Grid>
</Window>
